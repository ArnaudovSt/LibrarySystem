@model LibrarySystem.Web.ViewModels.Home.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="panel-group">
        <h2 class="text-center panel-heading">Latest Book:</h2>
        <div class="card text-center panel-body">
            <h3 class="text-center panel-header">@Model.LatestBook.Title</h3>
            <div class="card-header">
                @foreach (var genre in Model.LatestBook.Genres)
                {
                    <text> @genre.Name </text>
                }
            </div>
            <div class="card-body">
                <h4 class="card-title">
                    By:
                    @foreach (var author in Model.LatestBook.Authors)
                    {
                        <text> @author.FullName </text>
                    }
                </h4>
                <p class="card-text">@Model.LatestBook.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">ISBN: @Model.LatestBook.ISBN</li>
                <li class="list-group-item">Page Count: @Model.LatestBook.PageCount</li>
                <li class="list-group-item">Year of Publishing: @Model.LatestBook.YearOfPublishing</li>
            </ul>
            <a href="~/book/@Model.LatestBook.Id" class="btn btn-primary">Go to Book Details</a>
            <div class="card-footer text-muted">
                &copy; LibrarySystem
            </div>
        </div>
    </div>
</div>

<div class="row">
    <h2 class="text-center panel-heading">Top Rated Books:</h2>
    @foreach (var book in Model.TopRatedBooks)
    {
        <div class="col-md-4">
            @Html.DisplayFor(_ => book)
        </div>
    }
</div>